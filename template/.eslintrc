{
  root: true,
  parser: "babel-eslint",
  parserOptions: {
    ecmaVersion: 7,
    sourceType: "module",
    allowImportExportEverywhere: false,
    ecmaFeatures: {
      jsx: true,
      modules: true
    }
  },
  env: {
    es6: true,
    node: true,
    browser: true
  },
  extends: [
    "plugin:react/recommended"
  ],
  "rules": {
    "react/prop-types": 0,
    "react/no-find-dom-node": 0,
    "react/display-name": 0
  }
}
